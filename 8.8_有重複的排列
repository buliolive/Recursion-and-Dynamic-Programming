#include <iostream>
#include <vector>
#include <string>

std::vector<std::string> classification(std::string str){
  std::vector<std::string> output{};
  
  if((int)str.length()==0){ return output; }
  
  int start  =0;
  std::string s = ""; s = s+str.at(start) ;
  for(int i=1;i<(int)str.length();i++){
    if(str.at(start)==str.at(i)){ s = s+ str.at(i); }
    else{ 
      output.push_back(s); 
      s.clear();
      start = i; 
      s = s + str.at(start);
    }
  }
  output.push_back(s); 
  s.clear();
  
  std::cout<< str << " : " ;
  for(auto o:output){ std::cout << o << ", "; }
  std::cout<< std::endl;
  return output;
}

void count(){
  
  return;
}

int main(){
  std::string str = "aabccc";
  int len{static_cast<int>(str.length())};
  std::vector<std::string> ans{};
  ans = classification(str);
  
  count(0,str,ans);
  for(auto s:ans){ std::cout<<s<<", "; }
  std::cout<<std::endl;
  
  return 0;
}
