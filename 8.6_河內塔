#include <iostream>
#include <vector>
#include <stack>

class Tower{
  private:
    int m_N;
    int m_number;
    std::vector<std::stack<int>> m_tower;
    
  public:
    Tower(int n,int num):m_N{n},m_number{num}
    {
      m_tower.resize(m_number);
      for(int i=m_N;i>0;i--){ m_tower[0].push(i); }
    }
    
    void print(){
      for(int i=1;i<=m_number;i++){
        std::cout<<"Tower "<< i <<" : ";
        std::stack<int> s = m_tower[i-1];
        while(!s.empty()){
          std::cout<< s.top() << " ";
          s.pop();
        }
        std::cout<< std::endl;
      }
      std::cout<< std::endl;
    }
};

int main(){
  int N{10};
  int tower{3};
  Tower T{N,tower};
  
  return 0;
}
